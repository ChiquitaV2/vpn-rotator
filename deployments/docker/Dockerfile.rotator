FROM golang:1.25-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN cd cmd/rotator && go build -o /rotator

FROM alpine:latest
RUN apk --no-cache add ca-certificates
COPY --from=builder /rotator /usr/local/bin/rotator

EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/rotator"]
