[Unit]
Description=VPN Rotator Service
After=network.target

[Service]
Type=simple
User=vpn-rotator
WorkingDirectory=/opt/vpn-rotator
EnvironmentFile=/etc/vpn-rotator/config.env
ExecStart=/usr/local/bin/rotator
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/vpn-rotator

[Install]
WantedBy=multi-user.target
